@model IEnumerable<DesafioSoftwareEngineer01.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes Cadastrados</h1>

<div class="form-group">
    <a asp-action="Create"><input type="button" value="Novo Cliente" class="btn btn-primary" /></a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Telefone
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoCliente.Localidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTelefone)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnderecoCliente.Localidade)
                    -
                    @Html.DisplayFor(modelItem => item.EnderecoCliente.Uf)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
