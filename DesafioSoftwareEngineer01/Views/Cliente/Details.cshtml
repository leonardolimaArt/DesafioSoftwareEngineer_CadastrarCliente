@model DesafioSoftwareEngineer01.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Cliente - @Html.DisplayFor(model => model.Name)</h1>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar ao Início</a>
</div>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Telefone:
        </dt>
        <dd class="col-sm-10" pattern="\(\d{2}\) \d{4,5}-\d{4}" placeholder="(XX) XXXX-XXXX">
            @Html.DisplayFor(model => model.NumeroTelefone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Cep):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Cep)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Logradouro):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Logradouro)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Complemento):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Complemento)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Bairro):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Bairro)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Localidade):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Localidade)
        </dd>

        <dt class="col-sm-2">
            UF:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Uf)
        </dd>

        <dt class="col-sm-2">
            IBGE:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Ibge)
        </dd>

        <dt class="col-sm-2">
            GIA:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Gia)
        </dd>

        <dt class="col-sm-2">
            DDD:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Ddd)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Siafi):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Siafi)
        </dd>
    </dl>
</div>
