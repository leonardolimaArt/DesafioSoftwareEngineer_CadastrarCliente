        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Siafi):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Siafi)
        </dd>
    </dl>
    <hr />
    <h3>Tem certeza que deseja deletar este cliente?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
    </form>
</div>