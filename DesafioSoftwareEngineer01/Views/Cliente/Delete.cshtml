        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Logradouro)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Complemento):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Complemento)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Bairro):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Bairro)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCliente.Localidade):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente.Localidade)
        </dd>

        <dt class="col-sm-2">
